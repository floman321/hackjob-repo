<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/text_view_host_availablenetworks"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:text="@string/str_available_networks"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <ListView
        android:id="@+id/lv_host_networkslist"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.28" />

    <ProgressBar
        android:id="@+id/progressBar_host_findNetworks"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
    <FrameLayout 
	    android:id="@+id/fl_btnwrapper_host_networksitem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="40dip">
		
		<Button
	        android:id="@+id/btn_host_refresh"
	        android:layout_width="192dip"
	        android:layout_gravity="center"
	        android:layout_height="wrap_content"
	        android:text="Refresh"
	        android:onClick="refresh"/>
		
	</FrameLayout>

</LinearLayout>